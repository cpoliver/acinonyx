{
  "title": "vim",
  "sections": [
    {
      "heading": "motions",
      "subsections": [
        {
          "subheading": "cursor",
          "items": [
            {
              "commands": [
                "h",
                "l"
              ],
              "description": "move cursor {left/right}"
            },
            {
              "commands": [
                "j",
                "k"
              ],
              "description": "move cursor {down/up}"
            }
          ]
        },
        {
          "subheading": "screen",
          "items": [
            {
              "commands": [
                "H",
                "M",
                "L"
              ],
              "description": "jump to {top/centre/bottom}"
            },
            {
              "commands": [
                "zz"
              ],
              "description": "centre cursor on screen"
            },
            {
              "commands": [
                "f",
                "b"
              ],
              "modifiers": [
                "ctrl"
              ],
              "description": "move {forwards/backwards} a full screen"
            },
            {
              "commands": [
                "d",
                "u"
              ],
              "modifiers": [
                "ctrl"
              ],
              "description": "move {forwards/backwards} half a screen"
            }
          ]
        },
        {
          "subheading": "word",
          "items": [
            {
              "commands": [
                "w",
                "W"
              ],
              "description": "jump forwards to the {start} of a {word/word + punctuation}"
            },
            {
              "commands": [
                "e",
                "E"
              ],
              "description": "jump forwards to the {end} of a {word/word + punctuation}"
            },
            {
              "commands": [
                "b",
                "B"
              ],
              "description": "jump backwards to the start of a {word/word + punctuation}"
            }
          ]
        },
        {
          "subheading": "line",
          "items": [
            {
              "commands": [
                "0",
                "$"
              ],
              "description": "jump to {start/end}"
            },
            {
              "commands": [
                "^",
                "g_"
              ],
              "description": "jump to {first/last} non-blank character"
            },
            {
              "commands": [
                "gg",
                "G"
              ],
              "description": "jump to {first/last} line/last line of document"
            },
            {
              "commands": [
                "3G"
              ],
              "description": "jump to line `3`"
            }
          ]
        },
        {
          "subheading": "find",
          "items": [
            {
              "commands": [
                "fx",
                "Fx"
              ],
              "description": "jump to {next/previous} occurence of `x`"
            },
            {
              "commands": [
                "tx",
                "Tx"
              ],
              "description": "jump to {before/after} the {next/previous} occurence of `x`"
            },
            {
              "commands": [
                ";",
                ","
              ],
              "description": "repeat previous find movement {forwards/backwards}"
            }
          ]
        },
        {
          "subheading": "paragraph, function, block",
          "items": [
            {
              "commands": [
                "{",
                "}"
              ],
              "description": "jump to {next/previous} paragraph, function, or block"
            }
          ]
        },
        {
          "subheading": "matching character",
          "items": [
            {
              "commands": [
                "%"
              ],
              "description": "jump to matching `()`, `{}`, `[]`",
              "hint": "use `:h matchpairs` for more info"
            }
          ]
        }
      ]
    },
    {
      "heading": "global",
      "items": [
        {
          "commands": [
            ":help keyword"
          ],
          "description": "open help for keyword"
        },
        {
          "commands": [
            ":o file"
          ],
          "description": "open file"
        },
        {
          "commands": [
            ":saveas file"
          ],
          "description": "save file as"
        },
        {
          "commands": [
            ":close"
          ],
          "description": "close current pane"
        },
        {
          "commands": [
            "K"
          ],
          "description": "open man page for word under the cursor"
        }
      ]
    },
    {
      "heading": "insert mode",
      "items": [
        {
          "commands": [
            "i"
          ],
          "description": "insert before the cursor"
        },
        {
          "commands": [
            "I"
          ],
          "description": "insert at the beginning of the line"
        },
        {
          "commands": [
            "a"
          ],
          "description": "append after the cursor"
        },
        {
          "commands": [
            "A"
          ],
          "description": "append at the end of the line"
        },
        {
          "commands": [
            "o"
          ],
          "description": "open a new line below the current line"
        },
        {
          "commands": [
            "O"
          ],
          "description": "open a new line above the current line"
        },
        {
          "commands": [
            "ea"
          ],
          "description": "append at the end of the word"
        },
        {
          "commands": [
            "Esc"
          ],
          "description": "exit insert mode"
        }
      ]
    },
    {
      "heading": "editing",
      "items": [
        {
          "commands": [
            "r"
          ],
          "description": "replace a single character"
        },
        {
          "commands": [
            "J"
          ],
          "description": "join line below with one space in between"
        },
        {
          "commands": [
            "gJ"
          ],
          "description": "join line below without space in between"
        },
        {
          "commands": [
            "cc"
          ],
          "description": "change entire line"
        },
        {
          "commands": [
            "cw"
          ],
          "description": "change from cursor position to the end of the word"
        },
        {
          "commands": [
            "c$"
          ],
          "description": "change from cursor position to the end of the line"
        },
        {
          "commands": [
            "s"
          ],
          "description": "delete character and substitute text"
        },
        {
          "commands": [
            "S"
          ],
          "description": "delete line and substitute text (same as cc)"
        },
        {
          "commands": [
            "xp"
          ],
          "description": "transpose two letters (delete and paste)"
        },
        {
          "commands": [
            "u"
          ],
          "description": "undo"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "r"
          ],
          "description": "redo"
        },
        {
          "commands": [
            "."
          ],
          "description": "repeat last command"
        }
      ]
    },
    {
      "heading": "visual mode",
      "items": [
        {
          "commands": [
            "v"
          ],
          "description": "enter visual mode"
        },
        {
          "commands": [
            "V"
          ],
          "description": "enter visual line mode"
        },
        {
          "commands": [
            "o"
          ],
          "description": "move to other end of marked area"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "v"
          ],
          "description": "enter visual block mode"
        },
        {
          "commands": [
            "O"
          ],
          "description": "move to other corner of block"
        },
        {
          "commands": [
            "aw"
          ],
          "description": "mark a word"
        },
        {
          "commands": [
            "ab"
          ],
          "description": "a block with ()"
        },
        {
          "commands": [
            "aB"
          ],
          "description": "a block with {}"
        },
        {
          "commands": [
            "ib"
          ],
          "description": "inner block with ()"
        },
        {
          "commands": [
            "iB"
          ],
          "description": "inner block with {}"
        },
        {
          "commands": [
            "Esc"
          ],
          "description": "exit visual mode"
        }
      ]
    },
    {
      "heading": "visual commands",
      "items": [
        {
          "commands": [
            ">"
          ],
          "description": "indent"
        },
        {
          "commands": [
            "<"
          ],
          "description": "unindent"
        },
        {
          "commands": [
            "y"
          ],
          "description": "yank marked text"
        },
        {
          "commands": [
            "d"
          ],
          "description": "delete marked text"
        },
        {
          "commands": [
            "~"
          ],
          "description": "switch case"
        }
      ]
    },
    {
      "heading": "registers",
      "items": [
        {
          "commands": [
            ":reg"
          ],
          "description": "show registers content"
        },
        {
          "commands": [
            "\"xy"
          ],
          "description": "yank into register `x`"
        },
        {
          "commands": [
            "\"xp"
          ],
          "description": "paste contents of register `x`"
        }
      ]
    },
    {
      "heading": "marks",
      "items": [
        {
          "commands": [
            ":marks"
          ],
          "description": "list of marks"
        },
        {
          "commands": [
            "ma"
          ],
          "description": "set current position for mark `A`"
        },
        {
          "commands": [
            "`a"
          ],
          "description": "jump to position of mark `A`"
        },
        {
          "commands": [
            "y`a"
          ],
          "description": "yank text to position of mark `A`"
        }
      ]
    },
    {
      "heading": "macros",
      "items": [
        {
          "commands": [
            "qa"
          ],
          "description": "record macro `a`"
        },
        {
          "commands": [
            "q"
          ],
          "description": "stop recording macro"
        },
        {
          "commands": [
            "@a"
          ],
          "description": "run macro `a`"
        },
        {
          "commands": [
            "@@"
          ],
          "description": "rerun last run macro"
        }
      ]
    },
    {
      "heading": "cut & paste",
      "items": [
        {
          "commands": [
            "yy"
          ],
          "description": "yank a line"
        },
        {
          "commands": [
            "2yy"
          ],
          "description": "yank `2` lines"
        },
        {
          "commands": [
            "yw"
          ],
          "description": "yank characters from the cursor position to the start of the next word"
        },
        {
          "commands": [
            "y$"
          ],
          "description": "yank to end of the line"
        },
        {
          "commands": [
            "p"
          ],
          "description": "paste the clipboard after cursor"
        },
        {
          "commands": [
            "P"
          ],
          "description": "paste before cursor"
        },
        {
          "commands": [
            "dd"
          ],
          "description": "delete line"
        },
        {
          "commands": [
            "2dd"
          ],
          "description": "delete `2` lines"
        },
        {
          "commands": [
            "dw"
          ],
          "description": "delete from the cursor position to the start of the next word"
        },
        {
          "commands": [
            "D"
          ],
          "description": "delete to the end of the line"
        },
        {
          "commands": [
            "d$"
          ],
          "description": "delete to the end of the line"
        },
        {
          "commands": [
            "x"
          ],
          "description": "delete character"
        }
      ]
    },
    {
      "heading": "saving & exiting",
      "items": [
        {
          "commands": [
            ":w"
          ],
          "description": "write file"
        },
        {
          "commands": [
            ":w !sudo tee %"
          ],
          "description": "write the current file using sudo"
        },
        {
          "commands": [
            ":wq",
            ":x",
            "ZZ"
          ],
          "description": "save and quit"
        },
        {
          "commands": [
            ":q"
          ],
          "description": "quit (fails if there are unsaved changes)"
        },
        {
          "commands": [
            ":q!",
            "ZQ"
          ],
          "description": "quit and discard unsaved changes"
        },
        {
          "commands": [
            ":wqa"
          ],
          "description": "write and quit all tabs"
        }
      ]
    },
    {
      "heading": "search & replace",
      "items": [
        {
          "commands": [
            "/pattern"
          ],
          "description": "search for `pattern`"
        },
        {
          "commands": [
            "?pattern"
          ],
          "description": "search backward for `pattern`"
        },
        {
          "commands": [
            "\\vpattern"
          ],
          "description": "very magic mode",
          "hint": "non-alphanumeric characters are interpreted as regex symbols (no escaping needed)"
        },
        {
          "commands": [
            "n"
          ],
          "description": "repeat search in same direction"
        },
        {
          "commands": [
            "N"
          ],
          "description": "repeat search in opposite direction"
        },
        {
          "commands": [
            ":%s/old/new/g"
          ],
          "description": "replace all in file"
        },
        {
          "commands": [
            ":%s/old/new/gc"
          ],
          "description": "replace with confirmations"
        },
        {
          "commands": [
            ":noh"
          ],
          "description": "remove highlighting of search matches"
        }
      ]
    },
    {
      "heading": "search & replace: multiple files",
      "items": [
        {
          "commands": [
            ":vimgrep /pattern/ {file}"
          ],
          "description": "search for `pattern` in multiple files"
        },
        {
          "commands": [
            ":cn"
          ],
          "description": "jump to the next match"
        },
        {
          "commands": [
            ":cp"
          ],
          "description": "jump to the previous match"
        },
        {
          "commands": [
            ":copen"
          ],
          "description": "open a window containing the list of matches"
        }
      ]
    },
    {
      "heading": "multiple files",
      "items": [
        {
          "commands": [
            ":e file"
          ],
          "description": "edit `file` in a new buffer"
        },
        {
          "commands": [
            ":bnext",
            ":bn"
          ],
          "description": "go to the next buffer"
        },
        {
          "commands": [
            ":bprev or :bp"
          ],
          "description": "go to the previous buffer"
        },
        {
          "commands": [
            ":bd"
          ],
          "description": "delete buffer (close file)"
        },
        {
          "commands": [
            ":ls"
          ],
          "description": "list open buffers"
        },
        {
          "commands": [
            ":sp file"
          ],
          "description": "open `file` in a new buffer and split window"
        },
        {
          "commands": [
            ":vsp file"
          ],
          "description": "open `file` in a new buffer and vertically split window"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "ws"
          ],
          "description": "split window"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "ww"
          ],
          "description": "switch windows"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "wq"
          ],
          "description": "quit window"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "wv"
          ],
          "description": "split window vertically"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "wh"
          ],
          "description": "move cursor to the left window"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "wl"
          ],
          "description": "move cursor to the right window"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "wj"
          ],
          "description": "move cursor to the window below"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "wk"
          ],
          "description": "move cursor to the window above"
        }
      ]
    },
    {
      "heading": "tabs",
      "items": [
        {
          "commands": [
            ":tabnew",
            ":tabnew file"
          ],
          "description": "open `file` in a new tab"
        },
        {
          "modifiers": [
            "ctrl"
          ],
          "commands": [
            "wT"
          ],
          "description": "move current split window into its own tab"
        },
        {
          "commands": [
            "gt",
            ":tabn"
          ],
          "description": "move to next tab"
        },
        {
          "commands": [
            "gT",
            ":tabp"
          ],
          "description": "move to previous tab"
        },
        {
          "commands": [
            "3gt"
          ],
          "description": "move to tab number `3`"
        },
        {
          "commands": [
            ":tabmove #"
          ],
          "description": "move current tab to the #th position (indexed from 0)"
        },
        {
          "commands": [
            ":tabc"
          ],
          "description": "close the current tab and all its windows"
        },
        {
          "commands": [
            ":tabo"
          ],
          "description": "close all tabs except for the current one"
        },
        {
          "commands": [
            ":tabdo `command`"
          ],
          "description": "run `command` on all tabs"
        }
      ]
    }
  ]
}
